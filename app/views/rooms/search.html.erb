<div class = "container-fiuld room">
  <h4 class = "pb-4">
    <% if @rooms == [] %>
    検索結果:0
    <% else %>
    検索結果:<%= @rooms.count %>
    <% end %>
  </h4>
  
  <div class = "row">
    <div class = "col-sm-6 col-lg-4 col-xl-3">
      <div class = "room-frame-inner">
        <% if @rooms == [] %>
        
        <% else %>
        <% @rooms.each do |room| %>
          <%= link_to room do%>
            <div class = "room-image-out">
              <%= image_tag(room.room_image.url,class:"room-image") %>
            </div>
          
            <div class = "room-profile">
            
            <p class = "room-profile-name">
              <%= room.room_name %>
            </p>
            
            <p class = "room-profile-city">
              <%= room.address %>
            </p>
            
            <p class = "room-profile-price">
              <%= number_to_currency(room.price, :unit => "￥",strip_insignificant_zeros: true) %>
            </p>
            
          　</div>
          <% end %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>