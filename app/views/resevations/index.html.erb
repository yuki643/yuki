<div class = "container-fiuld reservations">
  <h4 class = "pb-4">予約済みルーム一覧</h4>
  
    <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確日時</th>
      </tr>
    </thead>
    
    <tbody>
      <% @resevations.each do |resevation| %>
      <tr>
      <td>
        <%= link_to image_tag(resevation.room.room_image.url,class:"room-posts-image"),room_path(resevation.room) %>
      </td>
      
      <td class = "posts-name">
        <%= link_to (resevation.room.room_name),room_path(resevation.room) %>
      </td>
      
      <td class = "posts-content">
        <%= resevation.room_introduction %>
      </td>
      
      
      <td class = "price-icon">
        <%= resevation.total_price %>
      </td>
      
      <td>
        <%= resevation.start_date %>
      </td>
      
      <td>
        <%= resevation.end_date %>
      </td>
      
      <td>
        <%= resevation.created_at %>
      </td>
      
      </tr>
      <% end %>
    </tbody>
  </table>
</div>